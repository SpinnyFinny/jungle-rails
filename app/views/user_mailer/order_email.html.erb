<header class="page-header">
    <h1>My order</h1>
  </header>

<h1>Thank you for your order, <%= @order.email %></h1>
  <p>
    You have successfully ordered from Jungle.
    <h2>Your order id is: <em><%= @order.id %></em><h2>
  </p>

  <div>
    <table>
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @order.line_items.each do |line_item| %>
          <%= render 'order_content', line_item: line_item %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= '%.2f' % (@order.total_cents.to_i/100.0) %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>
  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>

<%# <p>Thanks for choosing jungle and have a great day!</p> %>